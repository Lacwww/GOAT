<!DOCTYPE tiles-definitions PUBLIC
 "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
 "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
	<definition name="tilesbase" template="/WEB-INF/views/tiles/layout.jsp">
		<put-attribute name="header" value="/WEB-INF/views/tiles/header2.jsp" />
		<put-attribute name="body" value="" />
		<put-attribute name="footer" value="/WEB-INF/views/tiles/footer.jsp" />
	</definition>
	<definition name="nolayout" template="/WEB-INF/views/tiles/nolayout.jsp">
		<put-attribute name="header" value="" />
		<put-attribute name="body" value="" />
		<put-attribute name="footer" value="" />
	</definition>
	<definition name="noFixLayout" template="/WEB-INF/views/tiles/noFixLayout.jsp">
		<put-attribute name="header" value="" />
		<put-attribute name="body" value="" />
		<put-attribute name="footer" value="" />
	</definition>
	<definition name="noHeightLayout" template="/WEB-INF/views/tiles/noHeightLayout.jsp">
		<put-attribute name="header" value="" />
		<put-attribute name="body" value="" />
		<put-attribute name="footer" value="" />
	</definition>
	<!-- 폴더{1}/프로그램{2}는 jsp  -->
	<definition name="tiles/*" extends="nolayout">
		<put-attribute name="body"	value="/WEB-INF/views/tiles/{1}.jsp" />
	</definition>
	<definition name="main/main" extends="nolayout">
		<put-attribute name="body"	value="/WEB-INF/views/main/main.jsp" />
	</definition>
   <definition name="member/chkId" extends="nolayout">
    	<put-attribute name="body"   value="/WEB-INF/views/member/chkId.jsp" /> 
   </definition>
   <definition name="place/prevList" extends="noFixLayout">
    	<put-attribute name="body"   value="/WEB-INF/views/place/prevList.jsp" /> 
   </definition>		
   <definition name="schedule/placeList" extends="nolayout">
    	<put-attribute name="body"   value="/WEB-INF/views/schedule/placeList.jsp" /> 
   </definition>
   <definition name="notice/noticeReplyList" extends="noFixLayout">
    	<put-attribute name="body"   value="/WEB-INF/views/notice/noticeReplyList.jsp" /> 
   </definition>
   <definition name="trip/tripReplyList" extends="noFixLayout">
    	<put-attribute name="body"   value="/WEB-INF/views/trip/tripReplyList.jsp" /> 
   </definition>
   <definition name="place/placeModal" extends="noHeightLayout">
    	<put-attribute name="body"   value="/WEB-INF/views/place/placeModal.jsp" /> 
   </definition>		
   <definition name="place/placeAreaModal" extends="noHeightLayout">
    	<put-attribute name="body"   value="/WEB-INF/views/place/placeAreaModal.jsp" /> 
   </definition>
	<definition name="schedule/selectModal" extends="noHeightLayout">
    	<put-attribute name="body"   value="/WEB-INF/views/schedule/selectModal.jsp" /> 
   </definition>
	<!-- 폴더{1}/프로그램{2}는 jsp  -->
	<definition name="*/*" extends="tilesbase">
		<put-attribute name="body"	value="/WEB-INF/views/{1}/{2}.jsp" />
	</definition>	
</tiles-definitions>
